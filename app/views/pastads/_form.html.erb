<%= simple_form_for(@pastad, html: {:multipart => true, :class =>  "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :date, required: true, label: false, placeholder: "Date", input_html: {class: "form-control"} %>
    <%= f.input :image, class: "form-control" %>
  </div>

  <div class="form-actions">
       <%= f.submit "Save", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

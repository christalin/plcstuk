<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @event.name %></dd>
   <dt>Conductedby</dt>
  <dd><%= @event.conductedby %></dd>
  <dt>Phone Nos</dt>
  <dd><%= @event.phonenos %></dd>
  <dt>Description</dt>
  <dd><%= @event.description %></dd>
</dl>

<div class="col-md-4">
  <h3 class="text-center">
    Checklist
  </h3>
<table class="table table-condensed">
      <thead>
        <tr>
          <th>Action ID</th>
          <th>Action Item</th>
        </tr>
      </thead>
      <tbody>
        <% @checklists.each do |checklist| %>
        <tr>
          <td><%= checklist.actionid %></td>
          <td><%= checklist.actionitem %></td>
        </tr>
        <% end %>
        </tbody>
  </table>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>

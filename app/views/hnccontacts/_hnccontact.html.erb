<div class="responstable">
<table class="table table-striped table-bordered">    
  <thead>
    <tr>
      <th>DEPARTMENT</th>
      <th>NAME</th>
      <th>PHONE</th>
      <th>EMAIL</th>
    </tr>
  </thead>

  <tbody>
    <% @hnccontacts.each do |hnccontact| %>
      <tr>
        <td><%= hnccontact.department %></td>
        <td><%= hnccontact.name %></td>
        <td><%= hnccontact.phone %></td>
        <td><%= hnccontact.email %></td>
        <% if current_user.admin %>
           <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_hnccontact_path(hnccontact) %></td>
           <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, hnccontact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>   
      </tr>
    <% end %>
  </tbody>
</table>

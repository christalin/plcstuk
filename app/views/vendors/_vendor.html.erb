<div class="responstable">
<table class="table responstable">    
	<thead>
		<tr>
			<th>Vendor</th>
            <th>Key Contact</th>
            <th>Phone Number</th>
            <th>Event</th>
		</tr>	
    </thead>

    <tbody>
    	<% @vendors.each do |vendor| %>
    	<tr>
    		<td><%= link_to vendor.name, vendor_path(vendor) %></td>
            <td><%= vendor.address %></td>
            <td><%= vendor.phoneno %></td>
            <td><%= vendor.comments %></td>
            <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
            <td><%= link_to 'Delete', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    	<% end %>	
    </tbody>			
</table>
</div>




<%= simple_form_for(@vendor, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: false, placeholder: "Vendor Name", input_html: {class: "form-control"} %>
    <%= f.input :address, required: true, label: false, placeholder: "Address", input_html: {class: "form-control"} %>
    <%= f.input :phoneno, required: true, label: false, placeholder: "Phone Number", input_html: {class: "form-control"} %>
    <%= f.input :comments, required: true, label: false, placeholder: "Description", input_html: {class: "form-control"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= simple_form_for(@plcdirectory, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :phone, required: true, label: false, placeholder: "Phone", input_html: {class: "form-control"} %>
    <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
    <%= f.input :term, required: true, label: false, placeholder: "Term", input_html: {class: "form-control"}  %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

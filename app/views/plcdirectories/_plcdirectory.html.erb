<div class="responstable">
<table class="table table-striped table-bordered">    
  <thead>
    <tr>
      <th>NAME</th>
      <th>PHONE</th>
      <th>EMAIL</th>
      <th>TERM</th>
    </tr>
  </thead>

  <tbody>
    <% @plcdirectories.each do |plcdirectory| %>
      <tr>
        <td class="has-tooltip" title='<%= plcdirectory.phone %>'><%= plcdirectory.name %></td>
        <td><%= plcdirectory.phone %></td>
        <td><%= plcdirectory.email %></td>
        <td><%= plcdirectory.term %></td>
        <% if current_user.admin %>
           <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_plcdirectory_path(plcdirectory) %></td>
           <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, plcdirectory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>   
      </tr>
    <% end %>
  </tbody>
</table>
</div>



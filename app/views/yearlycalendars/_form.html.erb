<%= simple_form_for(@yearlycalendar, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :month, required: true, label: false, placeholder: "Month", input_html: {class: "form-control"} %>
    <%= f.input :event1, required: true, label: false, placeholder: "Event 1", input_html: {class: "form-control"} %>
    <%= f.input :event2, required: true, label: false, placeholder: "Event 2", input_html: {class: "form-control"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
  </div>
<% end %>

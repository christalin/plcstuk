<%= simple_form_for(@gallery, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title, required: true, label: false, placeholder: "Title", input_html: {class: "form-control"} %>
    <%= f.input :image %>
    <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
<% end %>
